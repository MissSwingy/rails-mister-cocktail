<div class="banner" style= "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); background-image: url(https://s3-us-west-2.amazonaws.com/www.palms.com/images/nightlife-bars/camdenlounge.jpg)">
  <%= image_tag "logo.png", alt: "Cocktails", width: 300 %>
  <div class="container">
    <div class="text-center padded">
      <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-warning btn-lg" %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">

          <% if cocktail.picture %>
            <div class="card-header" style="background-image: url('<%= image_path cocktail.picture%>')">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
            </div>
          <% end %>
          <div class="card-body">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
